 * \Synchronized with MacPerl 5.1.4a1
 * \
 */

#define MAC_CONTEXT

#include "EXTERN.h"
#include "perl.h"
#include "XSUB.h"
#include <Types.h>
#include <$module.h>

MODULE = Mac::$module	PACKAGE = Mac::$module

=head2 Functions

=over 4

=back

=cut
END_XS

print PL<<END_PL;
use ExtUtils::MakeMaker;

WriteMakefile(
    'LINKTYPE'	=> 'static dynamic',
    XSPROTOARG => '-noprototypes', 		# XXX remove later?
);
END_PL

print <<END;
# Looks ok, go ahead
Directory $module
::::perl Makefile.PL
Open $module.pm
Open $module.xs
Open Makefile.PL
New typemap
::ExtUtils:ExtractCalls {CIncludes}$module.h
::ExtUtils:ExtractConstants {CIncludes}$module.h
::ExtUtils:ExtractFunctions $module.xs
END
