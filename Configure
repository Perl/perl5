i_stdarg='$i_stdarg'
i_stddef='$i_stddef'
i_string='$i_string'
strings='$strings'
i_sysdir='$i_sysdir'
i_sysfile='$i_sysfile'
d_voidtty='$d_voidtty'
i_bsdioctl='$i_bsdioctl'
